<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mzaluckyj</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mzaluckyj.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
</head>
<body>
    <header class="sticky-top top-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow" style="background-color: #1D3251; color: #CDEDDA;">
            <div class="container-fluid justify-content-lg-end sticky-top top-0">
                <a class="navbar-brand" style="color: #CDEDDA;" asp-area="" asp-controller="Home" asp-action="Index">MZ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" style="color: #CDEDDA;">
                    <ul class="navbar-nav ms-auto" style="color: #CDEDDA;">
                        <li class="nav-item">
                            <a class="nav-link" style="color: #CDEDDA;" href="#about">About me</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #CDEDDA;" href="#projects">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #CDEDDA;" href="#experience">Experience</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: #CDEDDA;" asp-area="" asp-controller="Home" asp-action="Privacy">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="background-color: #1D3251;">
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
